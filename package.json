{
  "name": "iate-nodejs-boilerplate",
  "description": "A nodejs boiletplate project using IATE architecture",
  "scripts": {
    "start": "node index.js",
    "dev": "yarn swagger-autogen",
    "lint": "eslint src",
    "check": "npm run lint && depcheck",
    "pretest": "",
    "test": "jest --watch",
    "test-watch": "nodemon -x npm test",
    "swagger-autogen": "node swagger.js && nodemon",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.js": [
      "standard --fix",
      "jest",
      "git add"
    ]
  },
  "standard": {
    "env": [
      "jest"
    ]
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "@types/jest": "^26.0.23",
    "axios": "^0.21.1",
    "cors": "^2.8.5",
    "dotenv": "^9.0.0",
    "express": "^4.17.1",
    "express-bearer-token": "^2.4.0",
    "express-healthcheck": "^0.1.0",
    "firebase-admin": "^9.6.0",
    "firebase-functions": "^3.13.2",
    "helmet": "^4.4.1",
    "joi": "^17.4.0",
    "json-fs-db": "^0.1.5",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "moment": "^2.29.1",
    "mongo-mock": "^4.0.0",
    "mongodb-memory-server": "^6.9.6",
    "mongoose": "^5.12.7",
    "supertest": "^6.1.3",
    "swagger-autogen": "^2.7.8",
    "swagger-ui-express": "^4.1.6",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@shelf/jest-mongodb": "^1.2.4",
    "body-parser": "^1.19.0",
    "chai": "^4.3.4",
    "chain": "^0.1.3",
    "depcheck": "^1.4.0",
    "eslint": "^7.23.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.23.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "expect.js": "^0.3.1",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "mocha": "^8.3.2",
    "nyc": "^15.1.0",
    "sinon": "^10.0.0",
    "standard": "^16.0.3"
  },
  "nyc": {
    "check-coverage": true,
    "lines": 100,
    "branches": 100,
    "functions": 100,
    "statements": 100,
    "reporter": [
      "html"
    ]
  },
  "engines": {
    "node": "14"
  },
  "private": true
}
